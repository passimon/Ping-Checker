{
  "manifest_version": 3,
  "name": "Ping Checker",
  "version": "1.0",
  "description": "Displays current ping in icon space",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  }
}
